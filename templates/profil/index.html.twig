{% extends 'base-front.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Mon profil</h1>
        <h3 class="mt-3">Nom : {{ user.lastName }}</h3>
        <h3 class="mt-3">Prénom : {{ user.firstName }}</h3>
        <h3 class="mt-3">E-mail : {{ user.email }}</h3>
        <h4 class="mt-3">Date de création du compte : {{ user.createdAt|date('d/m/Y') }}</h4>
        <a href="#"><button class="btn btn-success mt-4 mb-4">Modifier</button></a>
        <a href="#"><button class="btn btn-danger mt-4 mb-4">Supprimer mon compte</button></a>

        <h1>Mes commandes</h1>
        {% if userCommands is not null %}
            {% for command in userCommands %}
                <h4>Numéro de commande : {{command.numCommand}}</h4>
                <h4>Prix total de la commande : {{command.totalPrice}}</h4>
                <h4>Date de la commande : {{command.createdAt|date('d/m/Y')}}</h4>
                {% else %}
                <p>Pas de commandes</p>
            {% endfor %}
        {% endif %}
        <h1>Mes adresses</h1>
        {% if userAdresses is not null %}
            {% for adress in userAdresses %}
                <h4>Adresse : {{adress.streetNumber}} {{adress.streetName}}</h4>
            {% else %}
                <p>Pas d'adresse</p>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}