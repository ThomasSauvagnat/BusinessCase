{% extends 'base-front.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container mt-3">
    <div class="row">
        <h1 class="mb-5">Mon panier</h1>
        {% if basketUser.products is not empty %}
            <div class="col-lg-8">
                {% for product in basketUser.products %}
                    <strong>{{product.label}}</strong>
                    <p>Description</p>
                    <p>{{product.description}}</p>
                    <p>Prix : {{product.price / 100}} €</p>
                    <i class="fa-solid fa-trash"></i>
                    <a href="{{ path('app_basket_remove', {id: product.id})}}">Supprimer</a>
                    <hr>
                {% endfor %}
            </div>
            <div class="col-lg-4">
                <p>Prix total : {{total / 100}} €</p>
                <button type="button" class="btn btn-dark">Commander</button>
            </div>

            {% else %}
            <p>Pas de produits</p>
        {% endif %}
    </div>
</div>
{% endblock %}
